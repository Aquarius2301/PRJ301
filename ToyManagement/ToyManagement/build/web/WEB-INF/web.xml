<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToysList</servlet-name>
        <servlet-class>controller.ToysList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteToy</servlet-name>
        <servlet-class>controller.DeleteToy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToy</servlet-name>
        <servlet-class>controller.AddToy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateToy</servlet-name>
        <servlet-class>controller.UpdateToy</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToysList</servlet-name>
        <url-pattern>/toyslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteToy</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToy</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateToy</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
